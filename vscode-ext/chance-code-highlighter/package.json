{
  "name": "chance-code-highlighter",
  "displayName": "Chance Code Highlighter",
  "description": "Syntax highlighting and language features for ChanceCode bytecode files.",
  "version": "0.0.1",
  "repository": "https://github.com/AzureianGH/ChanceCode",
  "publisher": "NathanHornby",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:chancecode"
  ],
  "main": "./out/client/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "chancecode",
        "aliases": [
          "ChanceCode",
          "chancecode"
        ],
        "extensions": [
          ".ccb"
        ]
      }
    ],
    "grammars": [
      {
        "language": "chancecode",
        "scopeName": "source.chancecode",
        "path": "./syntaxes/chancecode.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src server/src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  }
}
